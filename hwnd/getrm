#mkdir -p rm; export i; grep \>PLAY\< hcb/listing.1|while read i; do url="`printenv i|grep -o http://[^\ \>]*`"; printenv i| sed 's/.*PLAY//;s/<\([^>]\|><\)*>/^/g'|( IFS=^ read n a t l c; ram="`wget -O- \"$url\"| tr -d \\\r`"; wget -c "-Orm/${ram##*/}" "$ram" ); done
mkdir -p rm; export i; grep \>PLAY\< listing.*|while read i; do url="`printenv i|grep -io 'http://[0-9a-z._ /-]*.ra\?m'`"; ram="`wget -O- -t 0 --retry-connrefused \"$url\"| tr -d \\\r`"; rm="${ram##*archive/}"; rm="rm/${rm//\//-}"; wget -t 0 --retry-connrefused -c "-O$rm" "$ram"; printenv i| sed 's/.*PLAY//;s/<[^>]*>/\n/g'|grep -v ^$ > "$rm.txt"; done
#mkdir -p rm; export i; grep \>PLAY\< listing.*|while read i; do url="`printenv i|grep -io 'http://[0-9a-z._% /-]*.ra\?m'`"; rm="${url##*archive/}"; rm="${rm//.ram/.rm}"; rm="rm/${rm//\//-}"; [ -e "$rm" ] && continue; ram="`wget -O- -t 0 --retry-connrefused \"$url\"| tr -d \\\r`"; wget -t 0 --retry-connrefused -c "-O$rm" "$ram"; printenv i| sed 's/.*PLAY//;s/<[^>]*>/\n/g'|grep -v ^$ > "$rm.txt"; done
